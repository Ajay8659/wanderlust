<% layout("layout/boilerplate.ejs") %>

<body>
  <div class="mt-3 mb-3">
    <h3>All Listings</h3>
    <div class="row row-cols-lg-3 row-cols-md-3 row-cols-sm-2 row-cols-1">
      <% for(let listing of allListings) { %>
      <a href="/listings/<%= listing._id %>" class="card-link">
        <div class="card col img-card">
          <img src="<%= listing.image.url %>" class="card-img-top" alt="...">
          <div class="card-img-overlay text-muted">
            <%= listing.location %>
          </div>
          <div class="card-body">
            <p class="card-text"><b><%= listing.title %> </b><br><span class="text-muted"><%= listing.location %>, <%= listing.country %></span><br>
              <strong>&#8377;<%= listing.price.toLocaleString("en-IN")%>/Person</strong>
            </p>
          </div>
        </div>
      </a>
      <% } %>
    </div>
  </div>
</body>