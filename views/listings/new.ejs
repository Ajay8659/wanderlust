<% layout("layout/boilerplate.ejs") %>

  <body>
    <div class="row mt-5 mb-3">
      <div class="col-8 offset-md-2 offset-2 offset-lg-2 ">
        <h3>Create a New Listing</h3>
        <form method="POST" action="/listings" class="needs-validation" novalidate>
          <div class="mb-3">
            <label for="title" class="form-label">Title</label>
            <input name="listing[title]" id="title" placeholder="Enter a Catchy Title" type="text" class="form-control"
              required />
            <div class="valid-feedback">
              Good! <i class="fa-regular fa-thumbs-up"></i>
            </div>
            <div class="invalid-feedback">
              Please choose a Catchy Title.
            </div>
          </div>

          <div class="mb-3">
            <label for="description" class="form-label">Description</label>
            <textarea name="listing[description]" id="description" placeholder="Enter description" class="form-control"
              required></textarea>
            <div class="valid-feedback">
              Good! <i class="fa-regular fa-thumbs-up"></i>
            </div>
            <div class="invalid-feedback">
              Please choose a short  Discription.
            </div>
          </div>
          <div class="mb-3">
            <label for="image" class="form-label">Image</label>
            <input name="listing[image][url]" id="image" placeholder="Enter image URL/Link" type="text"
              class="form-control" required />
            <div class="valid-feedback">
              Good! <i class="fa-regular fa-thumbs-up"></i>
            </div>
            <div class="invalid-feedback">
              Please choose a Image URL/Link.
            </div>
          </div>
          <div class="row">
            <div class="mb-3 col-sm-5 col-md-4 col-12">
              <label for="price" class="form-label">Price</label>
              <input name="listing[price]" id="price" placeholder="Enter price" type="number" class="form-control"
                required />
              <div class="valid-feedback">
              Good! <i class="fa-regular fa-thumbs-up"></i>
            </div>
              <div class="invalid-feedback">
              Enter a valid Price.
            </div>
            </div>
            <div class="mb-3 col-sm-7 col-md-8 col-12">
              <label for="country" class="form-label">Country</label>
              <input name="listing[country]" id="country" placeholder="Enter Country" type="text" class="form-control"
                required />
              <div class="valid-feedback">
              Good! <i class="fa-regular fa-thumbs-up"></i>
            </div>
              <div class="invalid-feedback">
              Country should be valid.
            </div>
            </div>
          </div>
          <div class="mb-3">
            <label for="location" class="form-label">Location</label>
            <input name="listing[location]" id="location" placeholder="Enter location" type="text" class="form-control"
              required />
            <div class="valid-feedback">
              Good! <i class="fa-regular fa-thumbs-up"></i>
            </div>
            <div class="invalid-feedback">
              Location should we valid.
            </div>
          </div>

          <div class="mb-3">
            <button class="btn btn-dark add-btn" type="submit">Add</button>
          </div>
        </form>
      </div>
    </div>
  </body>